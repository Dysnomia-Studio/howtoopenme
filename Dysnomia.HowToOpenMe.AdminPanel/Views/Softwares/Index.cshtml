@model IEnumerable<Dysnomia.HowToOpenMe.Common.Models.Software>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SmallName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Desc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.URL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Windows)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MacOS)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Linux)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Android)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IOS)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SmallName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.Raw(item.Desc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.URL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Windows)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MacOS)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Linux)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Android)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IOS)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.SmallName }) |
                @Html.ActionLink("Details", "Details", new { id = item.SmallName }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.SmallName })
            </td>
        </tr>
}
    </tbody>
</table>
