@model Dysnomia.HowToOpenMe.Common.Models.ExtToSoft

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>ExtToSoft</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ExtensionId" class="control-label"></label>
                <select name="ExtensionId" asp-items="(SelectList) @ViewData["extensions"]"></select>
            </div>
            <div class="form-group">
                <label asp-for="ExtName" class="control-label"></label>
                <select name="ExtName" asp-items="(SelectList) @ViewData["extensionsName"]"></select>
            </div>
            <div class="form-group">
                <label asp-for="SoftwareId" class="control-label"></label>
                <select name="SoftwareId" asp-items="(SelectList) @ViewData["softwares"]"></select>
            </div>
            <div class="form-group">
                <label asp-for="Use" class="control-label"></label>
                <input asp-for="Use" class="form-control" />
                <span asp-validation-for="Use" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Free" class="control-label"></label>
                <input asp-for="Free" class="form-control" />
                <span asp-validation-for="Free" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
